% Enumerate with letters.
\renewcommand{\theenumi}{\alph{enumi}}
\newenvironment{henumerate}[1]
 {\NumTabs{#1}\inparaenum\let\latexitem\item
  \def\item{\def\item{\tab\latexitem}\latexitem}}
 {\endinparaenum}

